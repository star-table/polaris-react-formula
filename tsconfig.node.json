{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es2016",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noEmit": false,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "outDir": "./dist",
    "plugins": [
      {"name": "typescript-plugin-css-modules"}
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
